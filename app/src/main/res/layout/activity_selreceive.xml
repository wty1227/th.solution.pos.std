<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayoutStyle"
    android:orientation="vertical">

    <include layout="@layout/lt_top_white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:text="收货准备"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selreceive_btnDownload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_batch_download"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="下载收货" />
                <TextView
                    android:id="@+id/selreceive_btnContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_batch_new"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="查看内容" />

                <TextView
                    android:id="@+id/selreceive_btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_batch_upload"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="上传数据" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:text="报表"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/selreceive_btnRpt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_batch_rpt"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="历史汇总" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_user"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="修改密码"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/press_white_t_gray"
                    android:drawableTop="@mipmap/ic_action_sync"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="下载资料"
                    android:visibility="invisible"/>


            </LinearLayout>


            <Button
                android:id="@+id/selreceive_btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/button_selector_primary"
                android:enabled="true"
                android:text="开始收货"
                android:textColor="@color/white_m"
                android:textSize="@dimen/sp18"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>