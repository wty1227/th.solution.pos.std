<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gvSaleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_noselected_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/lbItemName"
                android:hint=""
                android:text=""
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/sp20"
                android:textColor="@color/black"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/lbRemoveItem"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_gravity="right"
                android:background="@drawable/ic_baseline_close_24"
                android:backgroundTint="@color/gray"/>
        </LinearLayout>
<!--        第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbSalePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/sp20"
                    android:text="2.5"/>
                <TextView
                    android:id="@+id/lbUnitNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/sp20"
                    android:text="/瓶"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbReduceQty"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:background="@drawable/ic_baseline_remove_circle_outline_24"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/lbQty"
                    android:hint="11111"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/sp20"
                    android:textColor="@color/black"
                    android:text="1"/>

                <TextView
                    android:id="@+id/lbAddQty"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:background="@drawable/ic_baseline_add_circle_24"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorPrimary"/>

            </LinearLayout>


            <TextView
                android:id="@+id/lbSubAmt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:text="2.50"
                android:textSize="@dimen/sp28"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>