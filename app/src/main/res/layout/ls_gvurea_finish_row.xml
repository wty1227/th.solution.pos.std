<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"/>


    <LinearLayout
        android:id="@+id/gvSaleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbFlowId"
            android:hint="1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black_hint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbItemNo"
                    android:hint="692880"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbQty"
                        android:hint="11111"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/sp20"/>
                    <TextView
                        android:id="@+id/lbSalePrice"
                        android:hint="11111"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/sp20"/>

                    <TextView
                        android:id="@+id/lbSubAmt"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="11111"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp20" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbItemName"
                    android:hint=""
                    android:text="顾大嫂麻辣烫酸辣味118g12312312321312"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/sp20"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbValidSubAmt"
                    android:hint=""
                    android:layout_width="@dimen/dp70"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/red_m"
                    android:textSize="@dimen/sp20"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbVipName"
                    android:hint=""
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/sp20"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/lbDeviceNo"
                    android:hint="11111"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/sp20"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>