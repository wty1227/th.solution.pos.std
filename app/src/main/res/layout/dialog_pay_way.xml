<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_m"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@color/page_bg">
        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="付款方式"
            android:textColor="@color/black_m"
            android:textSize="@dimen/sp28" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_action_close"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="left|center_vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />

    <LinearLayout
        android:id="@+id/dialog_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPayCode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp200"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="扫码"
            android:textColor="@color/blue_m"
            android:textSize="@dimen/sp16" />

        <View
            android:layout_width="@dimen/dp01"
            android:layout_height="match_parent"
            android:background="@color/black_hint" />

        <Button
            android:id="@+id/btnPayZf6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp200"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="其他支付"
            android:textColor="@color/blue_m"
            android:textSize="@dimen/sp16"/>


        <View
            android:layout_width="@dimen/dp01"
            android:layout_height="match_parent"
            android:background="@color/black_hint" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />
    <Button
        android:id="@+id/btnJoinFlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="加入普通销售流水"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp16"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />



</LinearLayout>