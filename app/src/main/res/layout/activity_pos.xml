<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    style="@style/BaseLayoutStyle">

    <!--        top-->
    <include layout="@layout/lt_top_primary" />


    <!--        main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--            left-->
        <LinearLayout
            android:layout_width="@dimen/dp500"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--            title-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp30"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="商品项目"
                            android:textColor="@color/black"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:text="数量"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:text="单价"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="match_parent"
                            android:text="优惠"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="match_parent"
                            android:text="小计"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>
                    <!--            saleLists-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/gvSaleFlow"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/dp10"
                            android:paddingRight="@dimen/dp10"
                            android:dividerHeight="@dimen/dp20"
                            android:drawSelectorOnTop="true"
                            android:listSelector="@drawable/list_item_selector"
                            android:divider="@color/transparent"
                            />

                        <ImageView
                            android:id="@+id/imgNoData"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/dp100"
                            android:scaleType="fitCenter"
                            android:src="@drawable/nodata"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <!--            sum-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp50"
                        android:background="@color/whitesmoke"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="应收"
                                android:textColor="@color/black"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:gravity="center" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:background="@color/white_m"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="折扣"
                                android:textColor="@color/black"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.00"
                                android:textColor="@color/red_m"
                                android:gravity="center" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:background="@color/white_m"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="合计"
                                android:textColor="@color/black"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--            tool-->
                <LinearLayout
                    android:layout_width="@dimen/dp80"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_margin="@dimen/dp2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp70"
                        android:gravity="center"
                        android:background="@drawable/shape_primary_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:text="删除" />
                    <TextView
                        android:layout_margin="@dimen/dp2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp70"
                        android:gravity="center"
                        android:background="@drawable/shape_primary_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:text="赠送" />
                    <TextView
                        android:layout_margin="@dimen/dp2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp70"
                        android:gravity="center"
                        android:background="@drawable/shape_primary_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:text="退货" />

                </LinearLayout>
            </LinearLayout>

            <!--            weight-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp2">
                        <TextView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="match_parent"
                            android:background="@color/red" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="稳定"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp2">
                        <TextView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="match_parent"
                            android:background="@color/red" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="净重"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp2">
                        <TextView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="match_parent"
                            android:background="@color/red" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="零位"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
<!--                <View-->
<!--                    android:layout_width="1dp"-->
<!--                    android:layout_height="@dimen/dp40"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@color/lightgray"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="重里(千克)"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0.00"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical" />
                </LinearLayout>
<!--                <View-->
<!--                    android:layout_width="1dp"-->
<!--                    android:layout_height="@dimen/dp40"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@color/lightgray"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="单价(元/千克)"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0.00"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical" />
                </LinearLayout>
<!--                <View-->
<!--                    android:layout_width="1dp"-->
<!--                    android:layout_height="@dimen/dp40"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@color/lightgray"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="总价(元)"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0.00"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/whitesmoke"/>
        <!--            right-->
        <LinearLayout
            android:layout_marginLeft="@dimen/dp5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whitesmoke"/>
            <android.support.v7.widget.RecyclerView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whitesmoke"/>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/dp5"
                android:id="@+id/plItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>

    <!--        foot-->
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/whitesmoke"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60" />


</LinearLayout>