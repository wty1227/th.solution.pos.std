<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseLayoutStyle"
    android:id="@+id/drawer_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/lt_top_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp70"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="网ㅤ络:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/lbPosId"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/lb0"
                        android:gravity="center_vertical|left"
                        android:textSize="12sp"
                        android:text=""
                        android:hint=""
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/lbTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:hint=""
                        android:text=""
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:text="营业员:"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/lbSaleMan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lb0"
                            android:gravity="center_vertical|left"
                            android:textSize="12sp"
                            android:text="9999"
                            android:hint="" />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="会ㅤ员:"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/lbVipName2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:hint=""
                            android:text=""
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:text="管理员:"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/lbCashier"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lb0"
                            android:gravity="center_vertical|left"
                            android:textSize="12sp"
                            android:text=""
                            android:hint="" />


                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="积ㅤ分:"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:hint=""
                            android:visibility="invisible"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_not_use"/>
                <!--上一单-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="上一单:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/lbLastSheetText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lb0"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:hint="" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="合  计:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/lbLastAmtText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lb0"
                            android:gravity="center_vertical|left"
                            android:text="00.00"
                            android:hint=""
                            android:textColor="@color/darkorange"/>
                        <TextView
                            android:layout_width="@dimen/dp60"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="找  零:"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/lbLastChgText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical|left"
                            android:text="00.00"
                            android:hint=""
                            android:textColor="@color/darkorange"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_not_use"/>

                <!--商品销售页面-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ListView
                        android:id="@+id/gvSaleFlow"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:dividerHeight="@dimen/dp20"
                        android:drawSelectorOnTop="true"
                        android:listSelector="@drawable/list_item_selector"
                        android:divider="@color/transparent"
                       />

                    <ImageView
                        android:id="@+id/imgNoData"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp100"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nodata"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbInputBarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="手工条码"
                            android:drawableLeft="@drawable/baseline_post_add_24"
                            android:background="@drawable/shape_gray_border"
                            android:drawableTint="@color/colorPrimary"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="center_vertical"
                            >
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_gravity="left"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/btnShoppingBag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="购物袋 >"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_not_use"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp220"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="金额："
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:gravity="bottom">
                            </TextView>
                            <TextView
                                android:id="@+id/lbSaleTotalAmt"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="36sp"
                                android:gravity="bottom">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="数量："
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:gravity="center_vertical">
                            </TextView>
                            <TextView
                                android:id="@+id/lbSaleTotalQty"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:gravity="center_vertical">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/lbVipName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:hint=""
                        android:text=""
                        android:paddingRight="@dimen/dp5"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/lbMember"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_width="@dimen/dp100"
                        android:layout_height="match_parent"
                        android:text="会员"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/button_selector_primary_border"></TextView>

                    <View
                        android:layout_width="@dimen/dp10"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/btnPay"
                        android:layout_width="@dimen/dp300"
                        android:layout_height="match_parent"
                        android:text="付款"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textSize="26sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:background="@drawable/button_selector_primary"></TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/lbMessage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:gravity="center_vertical|left"
                    android:text="提示：开始新的交易！"
                    android:hint=""
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/lbInput"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/green"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
