<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60">
        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="输入条码"
            android:textColor="@color/black_m"
            android:textStyle="bold"
            android:textSize="@dimen/sp28" />
<!--        <ImageButton-->
<!--            android:id="@+id/btnNumCancel"-->
<!--            android:layout_width="@dimen/dp80"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:background="@color/page_bg"-->
<!--            android:layout_marginRight="@dimen/dp5"-->
<!--            android:gravity="left|center_vertical"-->
<!--            android:src="@mipmap/ic_action_close"/>-->
        <TextView
            android:id="@+id/btnNumCancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:focusable="false"
            android:foreground="@drawable/baseline_close_24"
            android:foregroundGravity="center"
            android:foregroundTint="@color/grey"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:tag="cancel"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />

    <TextView
        android:id="@+id/txtInputObject"
        android:layout_margin="@dimen/dp10"
        android:background="@color/white_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/dp10"
        android:text=""
        android:hint="请输入条码"
        android:foreground="@drawable/shape_primarycolor_border"
        android:textColor="@color/darkorange"
        android:textSize="@dimen/sp26" />


    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:focusable="false"
                    android:textSize="26sp"
                    android:background="@drawable/shape_white_color"
                    android:gravity="center"
                    android:tag="7"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="8"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="8"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="9"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="9"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="4"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="5"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="6"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="1"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="2"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="3"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnNumClear"
                    android:layout_margin="@dimen/dp10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:text="清空"
                    android:textSize="26sp"
                    android:tag="clear"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNum0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:textSize="26sp"
                    android:tag="0"
                    />

                <TextView
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/btnNumBackspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:focusable="false"
                    android:background="@drawable/shape_white_color"
                    android:foreground="@drawable/baseline_backspace_24"
                    android:foregroundGravity="center"
                    android:foregroundTint="@color/colorPrimary"
                    android:textSize="26sp"
                    android:tag="backspace"
                    />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/btnNumEnter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:focusable="false"
                android:textColor="@color/white"
                android:background="@drawable/button_selector_primary"
                android:textSize="26sp"
                android:gravity="center"
                android:tag="enter"
                />
        </LinearLayout>

    </LinearLayout>




    <TextView
        android:layout_marginLeft="@dimen/dp10"
        android:id="@+id/lbMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_m"
        android:textSize="@dimen/sp26"
        android:text="消息:" />

</LinearLayout>