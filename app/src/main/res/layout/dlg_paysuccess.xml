<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60">
        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="付款成功"
            android:textColor="@color/black_m"
            android:textStyle="bold"
            android:textSize="@dimen/sp28" />
        <!--        <ImageButton-->
        <!--            android:id="@+id/btnNumCancel"-->
        <!--            android:layout_width="@dimen/dp80"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:background="@color/page_bg"-->
        <!--            android:layout_marginRight="@dimen/dp5"-->
        <!--            android:gravity="left|center_vertical"-->
        <!--            android:src="@mipmap/ic_action_close"/>-->
        <TextView
            android:id="@+id/btnNumCancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:focusable="false"
            android:foreground="@drawable/baseline_close_24"
            android:foregroundGravity="center"
            android:foregroundTint="@color/grey"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:tag="cancel"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/paysuccess"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        />

</LinearLayout>