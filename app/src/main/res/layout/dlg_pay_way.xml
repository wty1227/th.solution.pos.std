<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayoutStyle"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@color/page_bg">
        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="选择付款方式"
            android:textColor="@color/black_m"
            android:textSize="@dimen/sp28" />
        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/page_bg"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="left|center_vertical"
            android:src="@mipmap/ic_action_close"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btnPayXg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/press_white_t_gray"
            android:src="@drawable/payway_xz"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp5"
            android:background="@color/black_hint"
            />

        <ImageButton
            android:id="@+id/btnPayWx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/press_white_t_gray"
            android:src="@drawable/payway_wxzfb"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>