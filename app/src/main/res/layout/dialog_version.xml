<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_m"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="升级提示"
        android:textColor="@color/black_m"
        android:textSize="@dimen/sp18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />

    <TextView
        android:id="@+id/dialog_desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15"
        android:lineSpacingExtra="@dimen/dp5"
        android:textColor="@color/black_m"
        android:textSize="@dimen/sp16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />

    <LinearLayout
        android:id="@+id/dialog_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="取消"
            android:textColor="@color/blue_m"
            android:textSize="@dimen/sp16" />

        <View
            android:layout_width="@dimen/dp01"
            android:layout_height="match_parent"
            android:background="@color/black_hint" />

        <Button
            android:id="@+id/dialog_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="下载"
            android:textColor="@color/blue_m"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_down_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="升级"
        android:textColor="@color/yellow_m"
        android:textSize="@dimen/sp16" />

</LinearLayout>