<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80">
        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="标题"
            android:textColor="@color/black_m"
            android:textSize="@dimen/sp28" />
        <ImageButton
            android:id="@+id/btnNumCancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/page_bg"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="left|center_vertical"
            android:src="@mipmap/ic_action_close"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint"
        />
    <TextView
        android:id="@+id/txtInputObject"
        android:background="@color/white_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/dp10"
        android:text=""
        android:textColor="@color/darkorange"
        android:textSize="@dimen/sp38" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@color/black_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--键盘-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp405"
                android:background="@color/black_m"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_hint"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnNum7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="7"
                            android:focusable="false"

                            android:textColor="@color/white_m"
                            android:textSize="36sp"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="8"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="9"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_hint"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnNum4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="4"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="5"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="6"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_hint"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnNum1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="1"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="2"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNum3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="3"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_hint"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnNum0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="0"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNumDot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="."
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>
                        <Button
                            android:id="@+id/btnNumBackspace"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="退格"
                            android:focusable="false"
                            android:textColor="@color/white_m"
                            android:textSize="36sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_hint"/>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_hint"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnNumEnter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确\n定"
                        android:focusable="false"
                        android:textColor="@color/white_m"
                        android:textSize="36sp"
                        android:background="@color/black_s1"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSaleman"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/lvSaleman"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp405">

            </ListView>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/lbMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_m"
        android:textSize="@dimen/sp26"
        android:text="消息:" />



</LinearLayout>