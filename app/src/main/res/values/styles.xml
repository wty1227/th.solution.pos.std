    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_m</item>
        <item name="colorPrimaryDark">@color/blue_m</item>
        <item name="colorAccent">@color/blue_m</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:textColorHint">@color/black_hint</item>
        <item name="android:textCursorDrawable">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/MyActivityAnimation</item>-->
    </style>

